<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title %>
  <label for="inputBody">Opinion</label>
  <%= f.text_area :body %>
<%= f.submit "Update Book", class: 'btn btn-success' %>
<% end %>
<%= link_to "Show", book_path(@book.user_id) %>
