<h1>index</h1>
<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'profile', book: @book %>
    <div class="col-md-8 offset-1">
      <h2>Books</h2>
      <table>
        <tr>
          <th colspan="1"></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <td><%= link_to book.title, book_path(book.user.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
      </table>
    </table>
    </div>
  </div>
</div>
