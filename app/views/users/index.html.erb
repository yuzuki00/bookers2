<div class="container px-5 px-sm-0 py-3">
  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>
    <%= image_tag @user.get_profile_image(100,100) %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>

    <h2 class="mt-3">New book</h2>
    <%= form_with model: Book.new do |f| %>
      <div class="form-group">
        <div class="field">
          <br><%= f.label "Title" %><br>
          <%= f.text_field :title, class: 'form-control book_title' %>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <br><%= f.label "Opinion" %><br>
          <%= f.text_area :body, class: 'form-control book_body' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "Create Book", class: 'btn btn-success' %>
      </div>

    <% end %>
  </div>
    <div class="col-md-8 offset-1">
      <h2>Users</h2>
      <table class="table table-inverse">
        <thread>
          <tr>
            <th scope="col-md-4">image</th>
            <th scope="col-md-5">name</th>
            <th scope="col-md-3"></th>
          </tr>
        </thread>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
